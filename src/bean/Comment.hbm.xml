<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="bean">
	<class name="Comment" table="COMMENT">
		<id name="id" column="id">
			<generator class="native">
			</generator>
		</id>
		
		<property name="uid" column="uid" type="java.lang.Integer"/>
		<property name="pid" column="pid" type="java.lang.Integer"/>
	    <property name="context" column="context" type="java.lang.String"/>
		<property name="time" column="time" type="java.lang.String"/>
		
	</class>
	
</hibernate-mapping>